<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.mika.credit.facade.globaleagle.admin.dao.DeptMapper" >
  <resultMap id="deptMap" type="com.mika.credit.facade.globaleagle.admin.model.Dept" >
    <id column="id" property="id" jdbcType="VARCHAR" />
    <result column="name" property="name" jdbcType="VARCHAR" />
    <result column="code" property="code" jdbcType="VARCHAR" />
    <result column="lev" property="lev" jdbcType="INTEGER" />
    <result column="chief" property="chief" jdbcType="VARCHAR" />
    <result column="job" property="job" jdbcType="VARCHAR" />
    <result column="corp_id" property="corpId" jdbcType="VARCHAR" />
    <result column="pid" property="pid" jdbcType="VARCHAR" />

   <!-- <association property="parent" column="pid" select="com.xkkj.ims.sys.dept.DeptMapper.queryById"/>
    <association property="corp" column="corp_id" select="com.xkkj.ims.sys.corp.CorpMapper.queryById"/>-->
  </resultMap>
  
  <select id="queryById" resultMap="deptMap" parameterType="java.lang.String" >
    select *
    from s_dept
    where id = #{id}
  </select>
    <select id="queryAll" resultMap="deptMap" >
    select *
    from s_dept
  </select>
  
  <insert id="add" parameterType="com.mika.credit.facade.globaleagle.admin.model.Dept">
  	insert into s_dept(id,name,code,lev,chief,job,pid,corp_id)
  	values(#{id},#{name},#{code},#{lev},#{chief},#{job},#{pid},#{corpId})
  </insert>
  
  <update id="mod" parameterType="com.mika.credit.facade.globaleagle.admin.model.Dept">
  	update s_dept set
  	name=#{name},
  	code=#{code},
  	lev=#{lev},
  	chief=#{chief},
  	job=#{job},
  	pid=#{pid},
  	corp_id=#{corpId}
  	where id = #{id}
  </update>
  
  <delete id="del" parameterType="java.lang.String">
  	delete from s_dept where id=#{id}
  </delete>
  
  
</mapper>